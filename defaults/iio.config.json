{
    "fontface": {
        "src": "app/assets/fonts",
        "dest": {
            "fontface": "app/styles",
            "files": "www/css/assets/fonts",
            "relative": "css/assets/fonts"
        },
        "type": "*.ttf",
        "output": "fontfaces.less",
        "options": {
            "options": {
                "embed": ["woff"],
                "collate": true
            }
        }
    },
    "browserify": {
        "src": "app",
        "dest": "www/js",
        "input": "main.js",
        "type": "*.js",
        "output": "bundle.min.js",
        "options": {
            "options": {
                "transform": ["debowerify", "deglobalify"]
            }
        },
        "dependencies": []
    },
    "js": {
        "src": "app",
        "dest": "www/js",
        "input": "main.js",
        "type": "*.js",
        "options": {
            "options": {},
            "uglify": {}
        },
        "output": "bundle.min.js",
        "dependencies": []
    },
    "stylus": {
        "src": "app/styles",
        "dest": "www/css",
        "input": "main.styl",
        "type": "*.styl",
        "output": "bundle.min.css",
        "options": {
            "options": {

            },
            "prefix": [
                "last 2 versions",
                "> 1%",
                "ie 9",
                "safari"
            ],
            "base64": {
                "maxImageSize": 300000000,
                "debug": true
            },
            "minify": "",
            "cmq": {
                "log": true
            }
        },
        "dependencies": [],
        "extensions": [],
        "transform": []
    },
    "jade": {
        "src": "app",
        "dest": "www",
        "input": "main.jade",
        "type": "*.jade",
        "output": "index.html",
        "options": {
            "options": {}
        },
        "dependencies": [],
        "extensions": [],
        "pretty": true
    },
    "less": {
        "src": "app/styles",
        "dest": "www/css",
        "input": "main.less",
        "type": "*.less",
        "output": "bundle.min.css",
        "options": {
            "options": {

            },
            "prefix": [
                "last 2 versions",
                "> 1%",
                "ie 9",
                "safari"
            ],
            "base64": {
                "maxImageSize": 300000000,
                "debug": true
            },
            "minify": "",
            "cmq": {
                "log": true
            }
        },
        "dependencies": [],
        "extensions": [],
        "transform": []
    },
    "jasmine": {
        "src": "app",
        "type": "*[sS]pec.js",
        "options": {
            "options": {
                "integration": true,
                "specHtml": "test/index.html"
            }
        },
        "dependencies": []
    },
    "browsersync": {
        "dependencies": [],
        "options": {
            "options": {
                "logSnippet": false,
                "server": {
                    "baseDir": "./www"
                },
                "_proxy": "localhost:3000",
                "https": false,
                "logConnections": true,
                "logFileChanges": true,
                "online": true,
                "open": "external",
                "browser": ["google chrome"]
            }
        }
    }
}
